@model InVents.Models.Nota

@{
    ViewData["Title"] = "Create";
}

<h1>Nota</h1>
<div class="row">
    <div class="container">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="NotaValor" class="control-label"></label>
                <input asp-for="NotaValor" class="form-control" />
                <span asp-validation-for="NotaValor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FornecedorId" class="control-label"></label>
                <input asp-for="FornecedorId" class="form-control" />
                <span asp-validation-for="FornecedorId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProdutorId" class="control-label"></label>
                <input asp-for="ProdutorId" class="form-control" />
                <span asp-validation-for="ProdutorId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EmpresaId" class="control-label"></label>
                <input asp-for="EmpresaId" class="form-control" />
                <span asp-validation-for="EmpresaId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
